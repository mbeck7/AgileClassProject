<h1>Search Results for '<%= params[:search_title] %>'</h1>

<% if @found_jobs.empty? %>
	<p>No results found.</p>
<% end %>

<% @found_jobs.each do | job | %>
	<% if job.approved == true && job.rejected == false%>
		<%= link_to "Company: #{Company.find(job.company_id).name}  Job Title: #{job.title}  -  Job Type: #{job.job_type}  Job Status: #{job.job_status}", job %><br>
	<% end %>
<% end %>
