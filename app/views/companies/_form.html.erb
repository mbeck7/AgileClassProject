<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if admin_signed_in? %>
    <div class="field">
      <%= f.label :approved %><br>
      <%= f.check_box :approved %>
    </div>

    <div class="field">
      <%= f.label :rejected %><br>
      <%= f.check_box :rejected %>
    </div>
  <%end%>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :zip_code %><br>
    <%= f.text_field :zip_code %>
  </div>

<% if company_rep_signed_in? %>
  <div class="field">
    <%= f.label :company_rep_id %><br>
    <%= f.select :company_rep_id, [ [current_company_rep.email, current_company_rep.id] ]%>
<%else%>
    <%= f.label :company_rep_id %><br>
    <%= f.select :company_rep_id, [ [Company.find(params[:id]) .company_rep.email, Company.find(params[:id]) .company_rep.id] ]%>
<% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
